// This is your Prisma schema file

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL") // This loads from your .env file
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// Our App model
model App {
  id          String   @id @default(cuid())
  name        String
  description String
  url         String
  upvotes     Int      @default(0)
  createdAt   DateTime @default(now())
}